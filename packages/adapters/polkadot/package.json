{
  "name": "@laughingwhales/appkit-adapter-polkadot",
  "version": "1.8.12",
  "private": false,
  "sideEffects": false,
  "type": "module",
  "main": "./dist/esm/exports/index.js",
  "types": "./dist/types/exports/index.d.ts",
  "files": [
    "dist",
    "!tsconfig.tsbuildinfo",
    "README.md"
  ],
  "scripts": {
    "build:clean": "rm -rf dist",
    "build": "tsc --build tsconfig.build.json",
    "watch": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "vitest run --coverage.enabled=true --coverage.reporter=json --coverage.reporter=json-summary --coverage.reportOnFailure=true"
  },
  "exports": {
    ".": {
      "types": "./dist/types/exports/index.d.ts",
      "import": "./dist/esm/exports/index.js",
      "default": "./dist/esm/exports/index.js"
    }
  },
  "dependencies": {
    "@walletconnect/universal-provider": "2.22.4",
    "@laughingwhales/appkit": "workspace:*",
    "@laughingwhales/appkit-common": "workspace:*",
    "@reown/appkit-controllers": "workspace:*",
    "@reown/appkit-polyfills": "workspace:*",
    "@reown/appkit-utils": "workspace:*"
  },
  "peerDependencies": {
    "@polkadot/api": "^16.0.0",
    "@polkadot/extension-dapp": "^0.61.0",
    "@polkadot/util": "^13.0.0",
    "@polkadot/util-crypto": "^13.0.0"
  },
  "devDependencies": {
    "@polkadot/api": "^16.0.0",
    "@polkadot/extension-dapp": "^0.61.0",
    "@polkadot/util": "^13.0.0",
    "@polkadot/util-crypto": "^13.0.0",
    "@vitest/coverage-v8": "2.1.9",
    "vitest": "3.1.3"
  },
  "author": "Reown (https://discord.gg/reown)",
  "license": "SEE LICENSE IN LICENSE.md",
  "homepage": "https://github.com/Sacred-Protocol/appkit",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sacred-Protocol/appkit.git",
    "directory": "packages/adapters/polkadot"
  },
  "publishConfig": {
    "provenance": false
  },
  "bugs": {
    "url": "https://github.com/reown-com/appkit/issues"
  },
  "keywords": [
    "appkit",
    "wallet",
    "onboarding",
    "reown",
    "dapps",
    "web3",
    "polkadot",
    "substrate"
  ]
}
